# ============================================================================
# Economic Dashboard API - Environment Configuration
# ============================================================================
# Copy this file to .env and fill in your values

# API Keys
FRED_API_KEY=your_fred_api_key_here
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key_here
NEWS_API_KEY=your_news_api_key_here
OPENAI_API_KEY=your_openai_key_here  # For LLM-powered sentiment analysis

# ============================================================================
# Database Configuration
# ============================================================================

# Database backend: 'duckdb' for local dev, 'postgresql' for production
DATABASE_BACKEND=duckdb

# PostgreSQL Connection (when DATABASE_BACKEND=postgresql)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=economic_dashboard
POSTGRES_USER=dashboard_user
POSTGRES_PASSWORD=dashboard_pass

# Or use a single DATABASE_URL (takes precedence over individual vars)
# DATABASE_URL=postgresql://user:password@host:port/database

# DuckDB Configuration (when DATABASE_BACKEND=duckdb)
DUCKDB_PATH=/app/data/duckdb/economic_dashboard.duckdb
DUCKDB_MEMORY_LIMIT=4GB
DUCKDB_THREADS=4

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# API Configuration
API_KEY_ENABLED=true
API_SECRET_KEY=your-super-secret-key-change-in-production
API_RATE_LIMIT=100  # requests per minute

# Logging
LOG_LEVEL=INFO

# Worker Configuration
WORKER_REFRESH_CRON=0 6 * * *
WORKER_CLEANUP_CRON=0 2 * * 0
WORKER_COMPACT_CRON=0 3 * * 0

# Feature Flags
ENABLE_LLM_SENTIMENT=false
ENABLE_REAL_TIME_SIGNALS=false
ENABLE_PORTFOLIO_OPTIMIZATION=false
